<h3> <%= @ad.title %> </h3>
<%= FORMAT[@ad.format] %>	


<div class="crop">
	<% if @ad.image? %>
		<%= image_tag @ad.image.url %>
		<br />
	<% else %>
		No image found
	<% end %>
</div>



<p>
  <strong>User:</strong>
  <%= @ad.user.name %>
</p>
<p>
  <strong>Goal:</strong>
  <%= @ad.goal %>
</p>

 <%= link_to "Contribute", new_contribution_path(:ad_id=>@ad.id) %>

<p>
	
	  <%= link_to "Edit", edit_ad_path(@ad) %> |

		<%= link_to "Destroy", @ad, :confirm => 'Are you sure?', :method => :delete %> |

	<%= link_to "View All", ads_path %>
</p>
