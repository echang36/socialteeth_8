<!DOCTYPE html>
<html>

  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %> <!--*change application to defaults? -->
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  
  <body>
	 <div id="user_wrapper">
	  <% if user_signed_in? %>
		Signed in as <%= current_user.email %>. Not you?
		<%= link_to("Sign out", destroy_user_session_path, :method => :delete) %>
	  <% else %>
		<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
	  <% end %>
	 </div>
  
	 <div id="banner" class="group">
		<div id="logo"> <h1>Social Teeth </h1></div>
		
		<nav id="primary"> 
			<ul>
			<li><%= link_to "Browse Ads", ads_path %></li>
			<li><%= link_to "Submit an Ad", new_ad_path %> </li>
			<li><a hrefs="#"> About Social Teeth </a> </li>


			</ul>
		</nav>
	 </div>
	 

     <div id="wrapper">
		
		 <div id="main-content">
	    	<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
		    <% end %>
		    <%= content_tag :h1, yield(:title) if show_title? %>
			  
			  
			<%= yield %>
		</div>
	  
	</div>
 
 
  </body>
</html>
